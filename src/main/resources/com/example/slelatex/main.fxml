<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="600.0" prefWidth="1000.0" styleClass="main" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.slelatex.MainController">
   <AnchorPane VBox.vgrow="ALWAYS">
      <Text fill="WHITE" layoutX="47.0" layoutY="100.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Random Unimodular SLE Solver">
         <font>
            <Font name="Copperplate Gothic Bold" size="50.0" />
         </font>
      </Text>
      <Button layoutX="50.0" layoutY="250.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#solveSystem" prefHeight="50.0" prefWidth="300.0" text="Solve" textFill="RED">
         <padding>
            <Insets bottom="10.0" left="60.0" right="60.0" top="10.0" />
         </padding>
         <font>
            <Font name="Franklin Gothic Medium" size="20.0" />
         </font>
      </Button>
      <Button layoutX="50.0" layoutY="450.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#exit" prefHeight="50.0" prefWidth="300.0" text="Exit" textFill="RED">
         <padding>
            <Insets bottom="10.0" left="60.0" right="60.0" top="10.0" />
         </padding>
         <font>
            <Font name="Franklin Gothic Medium" size="20.0" />
         </font>
      </Button>
      <TextField fx:id="numberOfSolutionsField" alignment="CENTER" layoutX="50.0" layoutY="150.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="300.0" promptText="Number of solutions">
         <font>
            <Font name="Franklin Gothic Medium" size="18.0" />
         </font>
      </TextField>
      <TextArea fx:id="solution" layoutX="400.0" layoutY="150.0" prefHeight="350.0" prefWidth="550.0" promptText="Solution Matrix">
         <font>
            <Font name="Franklin Gothic Medium Cond" size="36.0" />
         </font></TextArea>
      <Button layoutX="50.0" layoutY="350.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#open" prefHeight="50.0" prefWidth="300.0" text="Open" textFill="RED">
         <padding>
            <Insets bottom="10.0" left="60.0" right="60.0" top="10.0" />
         </padding>
         <font>
            <Font name="Franklin Gothic Medium" size="20.0" />
         </font>
      </Button>
   </AnchorPane>
</VBox>
